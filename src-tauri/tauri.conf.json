{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "eulercopilot-client",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://116.63.144.61:30007/*",
          "http://116.63.164.87:30007/*",
          "https://eulercopilot.gitee.com/*"
        ]
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "docker",
            "cmd": "docker",
            "args": true
          }
        ]
      },
      "fs": {
        "exists": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "scope": [
          "$HOME/.config/eulercopilot/*",
          "$HOME/.eulercopilot/scripts/*"
        ]
      }
    },
    "windows": [],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": [
        "dmg",
        "rpm",
        "msi"
      ],
      "identifier": "org.openEuler.Copilot.Desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "publisher": "openEuler",
      "copyright": "Copyright (c) Huawei Technologies Co., Ltd. 2024-2024. All rights reserved.",
      "category": "Productivity",
      "shortDescription": "openEuler Copilot System Desktop Client",
      "longDescription": "openEuler Copilot System Desktop Client",
      "rpm": {
        "files": {},
        "release": "1",
        "depends": [
          "webkit2gtk3"
        ],
        "provides": [
          "eulercopilot-client"
        ],
        "desktopTemplate": "./template/eulercopilot-client.desktop"
      },
      "macOS": {
        "minimumSystemVersion": "11.0"
      }
    }
  }
}