{
  "productName": "eulercopilot-client",
  "version": "1.0.0",
  "identifier": "org.openEuler.Copilot.Desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "EulerCopilot",
        "decorations": false,
        "skipTaskbar": true,
        "width": 360,
        "height": 680,
        "minWidth": 360,
        "minHeight": 680,
        "maxWidth": 720,
        "resizable": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["rpm", "appimage", "msi", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": ["*"]
    }
  }
}
