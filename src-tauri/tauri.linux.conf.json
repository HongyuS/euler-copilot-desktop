{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "gnome-terminal",
            "cmd": "gnome-terminal",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "identifier": "org.openEuler.Copilot.Desktop",
      "targets": [
        "rpm"
      ],
      "rpm": {
        "release": "1",
        "depends": [
          "webkit2gtk3",
          "gnome-terminal"
        ],
        "desktopTemplate": "./template/eulercopilot-desktop.desktop",
        "provides": [
          "eulercopilot-desktop"
        ],
        "conflicts": [
          "eulercopilot-desktop"
        ],
        "obsoletes": [
          "eulercopilot-desktop"
        ]
      }
    }
  }
}