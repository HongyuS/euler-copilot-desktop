{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "package": {
    "productName": "eulercopilot-desktop"
  },
  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [
          {
            "name": "gnome-terminal",
            "cmd": "gnome-terminal",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "identifier": "org.openEuler.Copilot.Desktop",
      "targets": [
        "appimage",
        "rpm"
      ],
      "rpm": {
        "release": "1",
        "depends": [
          "gnome-terminal"
        ],
        "desktopTemplate": "./template/eulercopilot-desktop.desktop"
      }
    }
  }
}